    </thead>
    
    <tbody>
      <tr>
        <td><%= f.text_field :name %></td>
        <td><%= f.text_area :description %></td>
        <td><%= f.number_field :price_in_cents %></td>
        <td><%= f.submit %></td>
      </tr>
    </tbody>
    </table>
</div>
